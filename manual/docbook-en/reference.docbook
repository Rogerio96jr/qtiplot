          <imageobject>
            <imagedata  format="PNG" fileref="pics/3d-gallery-trajectory.png"/>
          </imageobject>
        </mediaobject>
      </informalfigure>
	</listitem>
      </varlistentry>
    </variablelist>
<!--             end of plot -> Plot 3D ->		-->
  </listitem>
</varlistentry>
</variablelist>

<!-- ************************************************** -->
<!--		end of menu plot			-->
<!-- ************************************************** -->
</sect1>


